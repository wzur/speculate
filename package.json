{
  "name": "speculate",
  "version": "1.7.4",
  "description": "Automatically generates an RPM Spec file for your Node.js project",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "lint": "eslint .",
    "posttest": "npm run lint",
    "coverage": "istanbul cover _mocha -- -R dot"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/speculate.git"
  },
  "keywords": [
    "spec",
    "rpm",
    "file",
    "node",
    "generate"
  ],
  "author": "ibl-team@lists.forge.bbc.co.uk",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bbc/speculate/issues"
  },
  "homepage": "https://github.com/bbc/speculate#readme",
  "bin": {
    "speculate": "./bin/speculate.js"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "hogan.js": "^3.0.2",
    "lodash": "^4.6.1",
    "rimraf": "^2.5.2",
    "tar-fs": "^1.11.1"
  },
  "eslintConfig": {
    "extends": "iplayer-es6",
    "parserOptions": {
      "ecmaVersion": 8
    }
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.5.0",
    "eslint": "^4.19.1",
    "eslint-config-iplayer-es6": "^4.0.1",
    "istanbul": "^0.4.2",
    "mocha": "^5.0.4",
    "sinon": "^4.4.8"
  }
}
